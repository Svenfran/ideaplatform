<div class="hide-filter-sidebar">
    <i class="fas fa-caret-square-left" style="font-size: 40px"></i>
</div>
<div class="sidebar">
<div class="filter-sidebar d-flex flex-column">
    <%= form_tag idea_problems_path, method: :get do %>
    <div class="d-flex mb-4">
        <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Title, Description, Category"
        %>
        <button type="submit" class="btn btn-default">
            <i class="fas fa-search"></i>
        </button>
        <%#= submit_tag "Search", class: "btn btn-dark" %>
    </div>
    <% end %>
    <%= form_tag idea_problems_path, method: :get do %> 
        <div class="d-flex flex-column">
            <hr>
            <p><strong>Idee oder Problem:</strong></p>
            <div class="d-flex justify-content-between">
                <label>
                    <%= "Idee" %>
                    <%= check_box_tag "filter[]", true %>
                </label>
                <label>
                    <%= "Problem" %>
                    <%= check_box_tag "filter[]", false %>
                </label>
            </div>
            <hr>
            <p><strong>Kategorien:</strong></p>
            <% Category.all.sort_by(&:name).each do |cat| %>
                <label>
                    <div class="d-flex justify-content-between align-items-center">
                    <%= cat.name %>
                    <%= check_box_tag "filter[]", cat.name, false, {multiple: true} %>
                    </div>
                </label>
            <% end %>
        </div>
        <%= submit_tag "Filter", class: "btn btn-dark mt-3" %>
    <% end %>
</div>
</div>
