<div class="content">
    <div class="container">
        <%= form_tag idea_problems_path, method: :get do %>
        <div class="d-flex mb-4">
            <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Search Title, Description or Category"
            %>
            <%= submit_tag "Search", class: "btn btn-primary" %>
        </div>
        <% end %>

        <div class="wrapper">
            <div class="col">
            <h4><%= link_to "IDEAS", {controller: 'idea_problems', action: 'index', query: params[:query] = true}, method: 'get' %></h4>
            <% @idea_problems.each do |item| %>
                <% if item.type_idea == true %>
                    <div class="d-flex flex-column">
                        <%= render "shared/card_overview", item: item %>
                    </div>
                <% end %>
            <% end %>
            </div>
            <div class="col">
            <h4><%= link_to "PROBLEMS", {controller: 'idea_problems', action: 'index', query: params[:query] = false}, method: 'get' %></h4>
            <% @idea_problems.each do |item| %>
                <% if item.type_idea == false %>
                    <div class="d-flex flex-column">
                        <%= render "shared/card_overview", item: item %>
                    </div>
                <% end %>
            <% end %>
            </div>
        </div>
    </div>
</div>

<script>
document.querySelector(".form-control").value = "";
</script>
